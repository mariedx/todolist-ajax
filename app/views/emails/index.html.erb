<div class="container px-5 mb-5">
  <%= link_to "Recevoir un email", emails_path, class: "btn btn-primary", :method => 'POST', remote: true %>

  <div class="row mx-lg-n5 mt-4">
    <div class="col py-3 px-lg-5 border bg-light">
      <h3>Liste des emails</h3>

          <ul class="list-unstyled text-small" id="email-new">
            <% @emails.each do |email|  %>
            <div class="col py-2 mt-1 border bg-white">
            <li>
              <strong>Object:</strong> <%= email.object  %> 
            </li>
            </div>
            <% end %>
          </ul>
    </div>

    <div class="col py-3 px-lg-5 border bg-light">Email sélectionné</div>
    </div>

</div>